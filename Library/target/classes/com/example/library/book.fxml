        <buttons>
          <Button mnemonicParsing="false" onAction="#izmjenaClick" text="Ok">
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </Button>
            <Button mnemonicParsing="false" onAction="#exitClick" text="Exit">
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
